defbce "on"
term xterm-256color
termcapinfo xterm-256color 'is=mJH?7h?1;4;6l'

defscrollback 5000
markkeys h=^B:l=^F:$=^E:^U=^Z:^D=^V

msgwait 3
msgminwait 2

autodetach on
startup_message off
bell_msg "^G"
defutf8 on
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
escape ^Jj
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
